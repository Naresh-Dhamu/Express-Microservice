{
    "compilerOptions": {
        "target": "esnext",
        "module": "commonjs",
        "allowJs": true,
        "checkJs": false,
        "outDir": "./dist",
        "rootDir": ".",
        "strict": false,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "declaration": true,
        "strictNullChecks": true,
        "resolveJsonModule": true,
        "sourceMap": true,
        "baseUrl": ".",
        "lib": ["ES6", "dom"],
        "moduleResolution": "node",
        "skipLibCheck": true,
        "paths": {
            "*": [
                "*",
                "controllers/*",
                "dtos/*",
                "middlewares/*",
                "models/*",
                "modules/*",
                "routes/*",
                "services/*",
                "helpers/*",
                "src/plugins/*",
                "src/microservices/*",
                "src/*"
            ]
        }
    },
    "exclude": ["node_modules", "dist", "tmp"],
    "include": [
        "controllers/**/*",
        "dtos/**/*",
        "middlewares/**/*",
        "models/**/*",
        "modules/**/*",
        "routes/**/*",
        "services/**/*",
        "helpers/**/*",
        "src/plugins/**/*",
        "src/microservices/**/*",
        "src/**/*",
        "**/*.ts",
        "**/*.helper.ts",
        "**/*.json"
    ]
}
